{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": 0,
        "comma-dangle": ["error", 
          {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "functions": "never"
          }
        ],
        "newline-before-return": 2,
        "newline-after-var": 2,
        "padded-blocks": 2,
        "new-cap": [
            "warn",
            {
              "properties": false,
              "newIsCap": true,
              "capIsNew": false
            }
        ],
        "require-jsdoc": 0,
        "guard-for-in": 0,
        "no-undef": 2,
        "no-undefined": 2,
        "space-in-parens": ["error"],
        "indent": ["error", 2],
        "space-infix-ops": ["error"],
        "quote-props": ["warn", "as-needed"]
    }
}
